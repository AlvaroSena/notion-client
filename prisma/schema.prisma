generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  name             String
  email            String   @unique
  passwordHash     String   @map("password_hash")
  isEmailConfirmed Boolean? @default(false) @map("is_email_confirmed")
  createdAt        DateTime @default(now()) @map("created_at")
  publicId         String   @unique @default(uuid())

  apiKeys APIKey[]

  @@map("users")
}

model APIKey {
  id          String   @id @default(uuid())
  value       String   @unique
  createdAt   DateTime @default(now()) @map("created_at")
  userId      String?  @map("user_id")
  publicKeyId String   @unique @map("public_key_id")

  User      User?     @relation(fields: [userId], references: [id])
  publicKey PublicKey @relation(fields: [publicKeyId], references: [id])

  @@map("api_keys")
}

model PublicKey {
  id        String  @id @default(uuid())
  value     String  @unique
  secretKey APIKey?

  @@map("public_keys")
}
